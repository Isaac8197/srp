/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : OLED SSD1306 + 2x MAX6675 (CS1=PA7, CS2=PA4) – sin UART
  ******************************************************************************
  */
/* USER CODE END Header */

/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* Private includes ----------------------------------------------------------*/
#include "fonts.h"
#include "ssd1306_oled.h"
#include "max6675.h"
#include "delays.h"
#include <stdio.h>
#include <string.h>
#include <math.h>

/* ==== Handles globales ==== */
I2C_HandleTypeDef hi2c1;   // lo usa la lib del OLED
TIM_HandleTypeDef htim2;   // dummy para resolver TIM2_IRQHandler de stm32f1xx_it.c

/* Prototipos locales */
void   SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C1_Init(void);

/* Variables afuera del while */
float t1, t2;
char  texto[100];

int main(void)
{
  HAL_Init();
  SystemClock_Config();

  /* (opcional) asegurá que la IRQ de TIM2 no quede habilitada */
  HAL_NVIC_DisableIRQ(TIM2_IRQn);

  MX_GPIO_Init();     // I2C + pines MAX6675
  MX_I2C1_Init();     // I2C1 a 400 kHz para el OLED

  delay_us_dwt_init();
  MAX6675_init();

  SSD1306_Init();
  SSD1306_Clear();
  SSD1306_UpdateScreen();

  while (1)
  {
      /* Lee ambos sensores (CK/DAT compartidos, distinto CS) */
      t1 = MAX6675_lee_cs(CS_MAX_GPIO_Port,  CS_MAX_Pin);   // CS1 = PA7
      Delay_ms(5);
      t2 = MAX6675_lee_cs(CS2_MAX_GPIO_Port, CS2_MAX_Pin);  // CS2 = PA4

      /* Mostrar en OLED */
      SSD1306_Fill(BLACK);

      SSD1306_GotoXY(8, 12);
      if (isnan(t1)) sprintf(texto, "T1:   Err");
      else           sprintf(texto, "T1: %.1f C", t1);
      SSD1306_Puts(texto, &Font_11x18, WHITE);

      SSD1306_GotoXY(8, 36);
      if (isnan(t2)) sprintf(texto, "T2:   Err");
      else           sprintf(texto, "T2: %.1f C", t2);
      SSD1306_Puts(texto, &Font_11x18, WHITE);

      SSD1306_UpdateScreen();

      HAL_Delay(1000);
  }
}

/* ==== Reloj simple por HSI ==== */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  __HAL_RCC_PWR_CLK_ENABLE();
  RCC_OscInitStruct.OscillatorType      = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState            = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState        = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK) { Error_Handler(); }

  RCC_ClkInitStruct.ClockType      = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                                   | RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource   = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider  = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;
  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK) { Error_Handler(); }
}

/* ==== GPIO: I2C1 PB6/PB7 + MAX6675 (PA5/PA6/PA7/PA4) ==== */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /* I2C1: PB6=SCL, PB7=SDA */
  GPIO_InitStruct.Pin   = GPIO_PIN_6 | GPIO_PIN_7;
  GPIO_InitStruct.Mode  = GPIO_MODE_AF_OD;
  GPIO_InitStruct.Pull  = GPIO_PULLUP;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_HIGH;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  /* MAX6675: DAT entrada pull-up */
  GPIO_InitStruct.Pin  = DAT_MAX_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  HAL_GPIO_Init(DAT_MAX_GPIO_Port, &GPIO_InitStruct);

  /* CK/CS1/CS2 salidas */
  GPIO_InitStruct.Pin   = CK_MAX_Pin;
  GPIO_InitStruct.Mode  = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull  = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_HIGH;
  HAL_GPIO_Init(CK_MAX_GPIO_Port, &GPIO_InitStruct);

  GPIO_InitStruct.Pin   = CS_MAX_Pin;
  HAL_GPIO_Init(CS_MAX_GPIO_Port, &GPIO_InitStruct);

  GPIO_InitStruct.Pin   = CS2_MAX_Pin;  // PA4
  HAL_GPIO_Init(CS2_MAX_GPIO_Port, &GPIO_InitStruct);

  HAL_GPIO_WritePin(CK_MAX_GPIO_Port, CK_MAX_Pin, GPIO_PIN_RESET);
  HAL_GPIO_WritePin(CS_MAX_GPIO_Port,  CS_MAX_Pin,  GPIO_PIN_SET);
  HAL_GPIO_WritePin(CS2_MAX_GPIO_Port, CS2_MAX_Pin, GPIO_PIN_SET);
}

/* ==== I2C1 @400kHz ==== */
static void MX_I2C1_Init(void)
{
  __HAL_RCC_I2C1_CLK_ENABLE();

  hi2c1.Instance             = I2C1;
  hi2c1.Init.ClockSpeed      = 400000;
  hi2c1.Init.DutyCycle       = I2C_DUTYCYCLE_2;
  hi2c1.Init.OwnAddress1     = 0;
  hi2c1.Init.AddressingMode  = I2C_ADDRESSINGMODE_7BIT;
  hi2c1.Init.DualAddressMode = I2C_DUALADDRESS_DISABLE;
  hi2c1.Init.OwnAddress2     = 0;
  hi2c1.Init.GeneralCallMode = I2C_GENERALCALL_DISABLE;
  hi2c1.Init.NoStretchMode   = I2C_NOSTRETCH_DISABLE;
  if (HAL_I2C_Init(&hi2c1) != HAL_OK) { Error_Handler(); }
}

void Error_Handler(void)
{
  __disable_irq();
  while (1) { }
}






